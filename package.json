{
  "name": "copy",
  "displayName": "copy",
  "description": "Copy menu to copy path, file name, etc",
  "version": "1.1.0",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Prabhakar-Poudel/copy"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "Prabhakar",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy.path",
        "title": "Copy Path or Reference"
      },
      {
        "command": "copy.relativePath",
        "title": "Copy Path From Content Root"
      },
      {
        "command": "copy.pathWithLineNum",
        "title": "Copy Path With Line Number"
      },
      {
        "command": "copy.absolutePath",
        "title": "Copy Absolute Path"
      },
      {
        "command": "copy.fileName",
        "title": "Copy File Name"
      },
      {
        "command": "copy.pathFromWorkspaceRoot",
        "title": "Copy Path From Workspace Root"
      }
    ],
    "keybindings": [
      {
        "command": "copy.path",
        "key": "shift+ctrl+c",
        "mac": "shift+cmd+c",
        "when": "editorFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "20.10.3",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.55.0",
    "typescript": "^5.3.2"
  }
}
